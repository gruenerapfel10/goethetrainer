rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow reading files uploaded to any user's folder (authenticated users only)
    match /uploads/{email=**} {
      allow read: if request.auth != null;
      allow write: if false;  // Write handled by Admin SDK on server-side
    }
    
    // Allow authenticated users to read/write AI generated images
    match /ai-generated-images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow public read access to certain file types (if needed)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
